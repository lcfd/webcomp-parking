{
  "title": "Parking Webcomponent",
  "description": "This web component shows all parking lots provided by the Open Data Hub.",
  "descriptionAbstract": "A widget that allows to easily integrate the list or the map view of the parking lots that are located in all South Tyrol or near a certain location.",
  "license": "AGPL-3.0-or-later",
  "copyrightHolders": [
    {
      "name": "NOI",
      "email": "info@noi.bz.it",
      "organization": "NOI S.p.A",
      "organizationUrl": "https://noi.bz.it"
    }
  ],
  "authors": [
    {
      "name": "Belka",
      "email": "hello@belkadigital.com",
      "organization": "Belka",
      "organizationUrl": "https://belkadigital.com/"
    }
  ],
  "image": "wcs-logo.png",
  "searchTags": ["parking"],
  "dist": {
    "basePath": "dist",
    "files": ["webcomp-parking.js"]
  },
  "configuration": {
    "tagName": "webcomp-parking",
    "options": [
      {
        "key": "width",
        "type": "text",
        "label": "Width of the component as css property (es: '500px' or '100%')",
        "required": false,
        "options": {
          "default": "100%"
        }
      },
      {
        "key": "height",
        "type": "text",
        "label": "Height of the component as css property (es: '500px' or '100%')",
        "required": false,
        "options": {
          "default": "500px"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the language of the browser (navigator.language[?s]) if supported. Fallback is `en`",
        "required": false,
        "options": {
          "values": ["en", "de", "it"],
          "default": "en"
        }
      },
      {
        "key": "fontFamily",
        "type": "text",
        "label": "Main font family",
        "required": false,
        "options": {
          "default": "Arial"
        }
      },
      {
        "key": "currentLocation",
        "type": "text",
        "label": "Coordinates of the current location in the following format: `{ 'lat': 46.31, 'lng': 11.26 }`",
        "required": true,
        "options": {
          "default": "{ 'lat': 46.31, 'lng': 11.26 }"
        }
      },
      {
        "key": "mapAttribution",
        "type": "text",
        "label": "Attribution text for the tiles, can contain html (without double-quotes)",
        "required": true,
        "options": {
          "default": "Map Tiles &copy; <a href='http://developer.here.com'>HERE</a>"
        }
      },
      {
        "key": "tiles-url",
        "type": "text",
        "label": "Url for the tiles, see https://leafletjs.com/reference-1.6.0.html#tilelayer",
        "required": true,
        "options": {
          "default": "https://1.base.maps.ls.hereapi.com/maptile/2.1/maptile/newest/normal.day/{z}/{x}/{y}/256/png8?apiKey="
        }
      },
      {
        "key": "disableParkingForecast",
        "type": "boolean",
        "label": "If set the forecast graph is hidden.",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "disableParkingRealTime",
        "type": "boolean",
        "label": "If set the realtime data are hidden.",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "disableParkingDirections",
        "type": "boolean",
        "label": "If set the road directions are hidden.",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "enabledParkingData",
        "type": "text",
        "label": "Set the datasets to use in the component. Default is '[\"tourism\", \"mobility\"]'",
        "required": false,
        "options": {
          "default": "[\"tourism\", \"mobility\"]"
        }
      }
    ]
  }
}
